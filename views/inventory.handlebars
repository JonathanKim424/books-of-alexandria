{{!-- products page --}}
<section class="container filter">
   <div class="row">
        <h2>Filter Search</h2>

        <div class="col-md filter-genre">
            <h3>
                By Genre
            </h3>
        </div>
        <div class="col-md filter-author">
            <h3>
                By Author
            </h3>
        </div>
        <div class="col-md filter-sale">
            <h3>
                On Sale
            </h3>
        </div>
    </div>
</section>

<!-- book cards -->
<div class="container">
    <div class="row">
        {{#each books}}
    
        <div class="col-sm">
            <div class="card" style="width: 18rem">
                <img src="{{this.book_img}}" alt="image of book" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{this.book_title}}</h5>
                    <p class="card-text">Genre: {{this.genre.genre_name}}</p>
                    <p class="card-text">Author: {{this.author}}</p>
                    <p class="card-text">Price: ${{this.price}}</p>
                    <p class="card-text">Stock: {{this.stock}}</p>
                    <a href="#"  class="btn btn-primary">PURCHASE</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
