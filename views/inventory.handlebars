{{!-- products page --}}
<div class="container bcontent text-center mt-5">
    <h2 class="">
        Edit Search
    </h2>
    <div class="dropdown">
  <button class="btn btn-primary btn-lg btn-block p-3 m-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    By Genre
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="#">Romance</a>
    <a class="dropdown-item" href="#">Horror</a>
    <a class="dropdown-item" href="#">History</a>
    <a class="dropdown-item" href="#">Biography</a>
    <a class="dropdown-item" href="#">Classics</a>
    <a class="dropdown-item" href="#">Educational</a>
    <a class="dropdown-item" href="#">Children's</a>
    <a class="dropdown-item" href="#">Comedy</a>
    <a class="dropdown-item" href="#">Novel</a>
  </div>
</div>
    <button type="button" class="btn btn-primary btn-lg btn-block p-3 m-2">By Author</button>
    <button type="button" class="btn btn-primary btn-lg btn-block p-3 m-2">On Sale</button>
</div>


<!-- book cards -->
<div class="container">
   <div class="row">
        {{#each books}}
        <div class="infoCard rgb col-sm-auto">
            
            <div id="bookImage" class="infoCard-image">
                <img src="{{this.book_img}}" class="book-image" alt="image of book">
            </div>
            <div class="cardText">
                <h2>{{this.book_title}}</h2>
                <p>By: {{this.author}}</p>
            </div>
            <div class="infoCard-stats">
                <div class="infoStat">
                    <div class="infoValue">{{this.genre.genre_name}}</div>
                    <div class="infoType">Genre</div>
                </div>
                <div class="infoStat infoBorder">
                    <div class="infoValue">{{this.price}}</div>
                    <div class="infoType">Price:</div>
                </div>
                <div class="infoStat">
                    <div class="infoValue">{{this.stock}}</div>
                    <div class="infoType">Inventory</div>
                </div>
            </div>
        </div>
    {{/each}}
   </div>
</div>
