{{!-- products page --}}
<div class="container bcontent text-center mt-5">
    <h2 class="">
        Edit Search
    </h2>
    <button type="button" id="searchGenre" class="btn btn-primary btn-lg btn-block p-3 m-2">By Genre</button>
    <a href="/inventory/byauthordesc"><button type="button" id="searchAuthor" class="btn btn-primary btn-lg btn-block p-3 m-2">By Author: Descending</button></a>
    <a href="/inventory/byauthorasc"><button type="button" id="searchAuthor" class="btn btn-primary btn-lg btn-block p-3 m-2">By Author: Ascending</button></a>
    <a href="/inventory/onsale"><button type="button" id="searchOnSale" class="btn btn-primary btn-lg btn-block p-3 m-2">On Sale</button></a>
</div>


<!-- book cards -->
<div class="container">
   <div class="row">
        {{#each books}}
        <div class="infoCard rgb col-sm-auto">
            
            <div id="bookImage" class="infoCard-image">
                <img src="{{this.book_img}}" class="book-image" alt="image of book">
            </div>
            <div class="cardText">
                <h2>{{this.book_title}}</h2>
                <p>By: {{this.author}}</p>
            </div>
            <div class="infoCard-stats">
                <div class="infoStat">
                    <div class="infoValue">{{this.genre.genre_name}}</div>
                    <div class="infoType">Genre</div>
                </div>
                <div class="infoStat infoBorder">
                    <div class="infoValue">{{this.price}}</div>
                    <div class="infoType">Price:</div>
                </div>
                <div class="infoStat">
                    <div class="infoValue">{{this.stock}}</div>
                    <div class="infoType">Inventory</div>
                </div>
            </div>
        </div>
    {{/each}}
   </div>
</div>